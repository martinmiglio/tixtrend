{
  "name": "@tixtrend/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./components/*": "./src/components/*.tsx",
    "./lib/*": "./src/lib/*.ts",
    "./hooks/*": "./src/hooks/*.ts",
    "./styles/*": "./src/styles/*"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "prettier -u -l . && eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "prettier --write . && eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.476.0",
    "motion": "^12.23.22",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.6"
  },
  "devDependencies": {
    "@tixtrend/eslint-config": "workspace:*",
    "@tixtrend/prettier-config": "workspace:*",
    "@tixtrend/typescript-config": "workspace:*",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.7.2"
  }
}
