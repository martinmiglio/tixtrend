{
  // "extends": "@vitable/typescript-config/react.json",
  "extends": "./tsconfig.base.json",
  "include": ["src"],
  "exclude": ["**/*.test.tsx", "**/*.test.ts", "**/__tests__/**"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "jsx": "react-jsx",
    "types": ["vite/client"]
  }
}
